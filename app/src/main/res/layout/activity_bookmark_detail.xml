<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookmarkDetailActivity">

    <ProgressBar
        android:id="@+id/bookmark_detail_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/bookmark_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coolGreen"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/behavior_bookmark_edit_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="8sp"
                            android:text="우리 아이의 행동"
                            />

                        <TextView
                            android:id="@+id/bookmark_edit_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="10sp"
                            android:text="수정"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_bookmark_categorization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#de000000"
                        android:textFontWeight="bold"
                        android:lineSpacingExtra="8sp"
                        android:text="숟가락으로 머리 치기"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/bookmark_line1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_height="2dp"
                    />

                <View
                    android:id="@+id/bookmark_edit_line1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layerType="software"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/behavior_bookmark_edit_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="6sp"
                            android:text="행동 장소"
                            />

                        <TextView
                            android:id="@+id/bookmark_edit_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="10sp"
                            android:text="수정"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_bookmark_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="#3b3b3b"
                        android:lineSpacingExtra="8sp"
                        android:text="서울대학교 소담마루 식당"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/bookmark_line3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_height="2dp"
                    />

                <View
                    android:id="@+id/bookmark_edit_line3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layerType="software"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/behavior_bookmark_edit_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="6sp"
                            android:text="행동 종류"
                            />

                        <TextView
                            android:id="@+id/bookmark_edit_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="10sp"
                            android:text="수정"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_bookmark_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="#3b3b3b"
                        android:lineSpacingExtra="8sp"
                        android:text="타해"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/bookmark_line4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_height="2dp"
                    />

                <View
                    android:id="@+id/bookmark_edit_line4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layerType="software"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/behavior_bookmark_edit_layout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="6sp"
                            android:text="행동 원인"
                            />

                        <TextView
                            android:id="@+id/bookmark_edit_text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="10sp"
                            android:text="수정"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/bookmark_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="12dp">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:backgroundTint="#db9a53"
                                android:background="@drawable/dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="16sp"
                                android:textColor="#3b3b3b"
                                android:letterSpacing="-0.03"
                                android:gravity="center_horizontal"
                                android:text="관심"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bookmark_self_stimulation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="12dp">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:backgroundTint="#3fd3b8"
                                android:background="@drawable/dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="16sp"
                                android:textColor="#3b3b3b"
                                android:letterSpacing="-0.03"
                                android:gravity="center_horizontal"
                                android:text="자기자극"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bookmark_task_evation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="12dp">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:backgroundTint="#3f73d3"
                                android:background="@drawable/dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="16sp"
                                android:textColor="#3b3b3b"
                                android:letterSpacing="-0.03"
                                android:gravity="center_horizontal"
                                android:text="과제회피"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bookmark_demand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="12dp">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:backgroundTint="#7b3fd3"
                                android:background="@drawable/dot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="16sp"
                                android:textColor="#3b3b3b"
                                android:letterSpacing="-0.03"
                                android:gravity="center_horizontal"
                                android:text="요구"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/bookmark_line5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="2dp"
                    />

                <View
                    android:id="@+id/bookmark_edit_line5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layerType="software"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/behavior_bookmark_edit_layout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="6sp"
                            android:text="행동 강도"
                            />

                        <TextView
                            android:id="@+id/bookmark_edit_text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="10sp"
                            android:text="수정"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/bookmark_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="34dp"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="4"
                        android:progress="0"
                        android:thumb="@drawable/custom_thumb"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_bookmark_detail_intensity_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="12sp"
                            android:text="매우 약함"
                            android:layout_weight="1"
                            android:gravity="left"
                            />

                        <TextView
                            android:id="@+id/txt_bookmark_detail_intensity_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="12sp"
                            android:text="약함"
                            android:layout_weight="1"
                            android:gravity="left"
                            />

                        <TextView
                            android:id="@+id/txt_bookmark_detail_intensity_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="12sp"
                            android:text="보통"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/txt_bookmark_detail_intensity_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="12sp"
                            android:text="강함"
                            android:layout_weight="1"
                            android:gravity="right"
                            />

                        <TextView
                            android:id="@+id/txt_bookmark_detail_intensity_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ababab"
                            android:lineSpacingExtra="12sp"
                            android:text="매우 강함"
                            android:layout_weight="1"
                            android:gravity="right"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/bookmark_line6"
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_height="2dp"
                    />

                <View
                    android:id="@+id/bookmark_edit_line6"
                    android:layout_width="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layerType="software"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>