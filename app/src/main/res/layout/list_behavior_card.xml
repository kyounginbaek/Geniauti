<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/behavior_card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:textColor="#3b3b3b"
            android:letterSpacing="-0.03"
            android:text="2018.11.13. 화요일"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/behavior_card"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#db9a53"
                    android:background="@drawable/dot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="#959595"
                    android:letterSpacing="-0.05"
                    android:gravity="center_horizontal"
                    android:text="관심"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_self_stimulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#3fd3b8"
                    android:background="@drawable/dot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="#959595"
                    android:letterSpacing="-0.05"
                    android:gravity="center_horizontal"
                    android:text="자기자극"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_task_evation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#3f73d3"
                    android:background="@drawable/dot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="#959595"
                    android:letterSpacing="-0.05"
                    android:gravity="center_horizontal"
                    android:text="과제회피"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_demand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7b3fd3"
                    android:background="@drawable/dot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="#959595"
                    android:letterSpacing="-0.05"
                    android:gravity="center_horizontal"
                    android:text="요구"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_card_categorization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:textColor="#2e2e39"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="20sp"
            android:text="숟가락으로 머리 치기"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    app:srcCompat="@drawable/ic_access_time_gray_24dp"/>

                <TextView
                    android:id="@+id/txt_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    android:textColor="#b32e2e39"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="오후 5:10 ~ 5:30"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_card_name_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:textColor="#992e2e39"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="14sp"
                android:gravity="center_vertical"
                android:text="박서영(엄마)"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
