<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_bookmark_profile_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_bookmark_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="8sp"
                android:text="공원 / 소리 지르기 / 요구"
                />

            <TextView
                android:id="@+id/list_bookmark_profile_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8b000000"
                android:lineSpacingExtra="6sp"
                android:text="저장된 기록 1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_bookmark_profile_delete"
            android:layout_width="58dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:tint="#ababab"
                app:srcCompat="@drawable/ic_close_green_24dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
